{
  "manifest_version": 3,
  "name": "YouTube Speed Control",
  "version": "1.1",
  "description": "Control YouTube playback speed from 0.1x to 10x with customizable shortcuts",
  "author": "Firefox YouTube Speed Extension",
  "icons": {
    "48": "icons/icon.svg",
    "96": "icons/icon.svg"
  },
  "action": {
    "default_popup": "settings.html",
    "default_icon": {
      "48": "icons/icon.svg",
      "96": "icons/icon.svg"
    },
    "default_title": "YouTube Speed Control"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["keyhandler.js", "content.js"]
    }
  ],
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://*.youtube.com/*"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "youtube-speed-unlocker@extension.org",
      "strict_min_version": "109.0"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}